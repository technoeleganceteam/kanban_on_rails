h1 = "#{ t '.hello' }, #{ @user.name }"

h3
  = t '.here_some_of_your_statistics'
  | :

p = link_to "#{ t '.projects' }: #{ @user.projects.size }", user_projects_url(@user)

p = link_to "#{ t '.boards' }: #{ @user.boards.size }", user_boards_url(@user)

p = link_to "#{ t '.issues' }: #{ @user.issues.size }", user_issues_url(@user)

h3
  = t '.you_can_sync_projects_and_issues_from'
  br
  small = t '.if_you_have_already_synced_your_project_it_will_be_synced_always_with_webhooks'

p
  b = t 'github'
  | &nbsp;

  - if current_user.has_github_account
    = render 'shared/sync_with_provider_button', :provider => 'github'
  - else
    = link_to (t '.turn_on_github'), omniauth_authorize_path(User, 'github', :locale => nil),
      :class => 'btn btn-success btn-xs'

