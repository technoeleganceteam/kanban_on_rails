<script>
  <% @board.ordered_sections.each do |s| %>
    <% columns = @board.ordered_columns.map{ |c| "section_#{ s.id }_column_#{ c.id }" }.to_json.html_safe %>

    init_dragula(<%= columns %>, <%= @board.id %>, <%= current_user.id %>);

    init_infinite_scroll(<%= columns %>)
  <% end %>
</script>
